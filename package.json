{
  "name": "github-package-links",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/jquery": "^3.2.16",
    "@types/jsdom": "^12.2.3",
    "@types/node": "^11.13.11",
    "awesome-typescript-loader": "^5.2.1",
    "jest": "^24.8.0",
    "jsdom": "^13.2.0",
    "prettier": "^1.17.1",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "wrapper-webpack-plugin": "1"
  },
  "dependencies": {},
  "scripts": {
    "build:dev": "webpack -p --display-error-details --env.NODE_ENV=dev",
    "build:prod": "webpack -p --display-error-details --env.NODE_ENV=prod",
    "watch": "webpack --watch --env.NODE_ENV=dev",
    "lint": "./node_modules/.bin/tslint -t stylish --project tsconfig.json",
    "static-analysis": "./node_modules/.bin/tsc -p tsconfig.json --noEmit",
    "sa": "./node_modules/.bin/tsc -p tsconfig.json --noEmit",
    "build-userscript": "cat userscript-header.txt dist/bundle.js > script.user.js && echo 'File userscript.js created'",
    "test-watch": "jest --watch",
    "cs": "./node_modules/.bin/prettier src/**/*.ts --write --single-quote",
    "test": "jest"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/test/.*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
